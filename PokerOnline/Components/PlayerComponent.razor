@using PokerOnline.Models

@*<div class="player vertical content">*@
<div id="pd" class="@(Active ? "player vertical content active" : "player vertical content")">
    <h4>@PlayerModel.Username</h4>
    <p>Bet: @PlayerModel.Bet</p>
    <p>State: @PlayerModel.State</p>
</div>

<style>
    #pd {
        padding: 5px;
		min-width: 200px;
    }
</style>

@code {
    [Parameter] public Player PlayerModel { get; set; }
	[Parameter] public bool Active { get; set; } = false;
}
